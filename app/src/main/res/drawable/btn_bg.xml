<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:bottom="4dp" android:right="4dp">
                <shape>
                    <solid android:color="@color/box_bg" />
                    <stroke android:width="@dimen/_1sdp" android:color="#F65F52" />
                    <corners android:radius="25dip" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="1dp" android:right="2dp" android:top="3dp" android:bottom="3dp">
                <shape>

                    <stroke android:width="@dimen/_1sdp" android:color="#F65F52" />
                    <corners android:radius="25dip" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp" android:right="2dp">
                <shape>

                    <corners android:radius="25dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>