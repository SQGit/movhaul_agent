<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#a08a8a" />
                    <corners android:radius="10dip"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item
                android:left="1dp"
                android:top="4dp"
                android:right="2dp">
                <shape>
                    <solid android:color="#695a69" />
                    <corners android:radius="11dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp" android:right="3dp">
                <shape>
                    <solid android:color="#a08a8a" />
                    <corners android:radius="10dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>