<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottom"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColorHint="@color/textColor">

                        <EditText
                            android:id="@+id/edittext_reg_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_10sdp"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/textColor"
                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="#E1E1E1" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:textColorHint="@color/textColor">

                        <EditText
                            android:id="@+id/edittext_reg_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Address"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="#E1E1E1" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/frame_expsersience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical|left">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textinput_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:textColorHint="@color/textColor">

                                <EditText
                                    android:id="@+id/edittext_state"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="State"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="bottom"
                                android:background="#E1E1E1" />


                            <LinearLayout
                                android:id="@+id/layout_choose_state"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            </LinearLayout>
                        </FrameLayout>


                        <FrameLayout
                            android:id="@+id/frame_expserience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical|left">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textinput_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:textColorHint="@color/textColor">

                                <EditText
                                    android:id="@+id/edittext_city"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="City"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="bottom"
                                android:background="#E1E1E1" />


                            <LinearLayout
                                android:id="@+id/layout_choose_city"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            </LinearLayout>
                        </FrameLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:arrowSize="@dimen/_13sdp"
                            android:gravity="bottom"
                            app:contentColor="@color/textColor"
                            app:customMasterCountries="NG,US,IN"
                            app:defaultNameCode="NG"
                            app:keyboardAutoPopOnSearch="false"
                            app:textSize="@dimen/_12sdp" />


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textinput_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:textColorHint="@color/textColor">

                            <EditText
                                android:id="@+id/edittext_login_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Phone"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:paddingTop="@dimen/_5sdp"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/_12sdp" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:background="#E1E1E1" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:textColorHint="@color/textColor">

                        <EditText
                            android:id="@+id/edittext_register_mail"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Email"
                            android:inputType="textWebEmailAddress"
                            android:maxLines="1"
                            android:paddingTop="@dimen/_5sdp"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_12sdp" />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="#E1E1E1" />


                    <EditText
                        android:id="@+id/edittext_coverage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Enter Coverage Area"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:minHeight="@dimen/_30sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/textColor"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="#E1E1E1" />


                    <LinearLayout
                        android:id="@+id/layout_coverage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@color/rect_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:visibility="gone">


                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/frame_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_vertical|left">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textinput_bank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:textColorHint="@color/textColor">

                                <EditText
                                    android:id="@+id/edittext_bank"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:clickable="false"
                                    android:enabled="false"
                                    android:hint="Choose Bank"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:textColor="@color/textColor"
                                    android:textSize="@dimen/_12sdp" />
                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="bottom"
                                android:background="#E1E1E1" />


                            <LinearLayout
                                android:id="@+id/layout_choose_bank"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                            </LinearLayout>
                        </FrameLayout>

                        <EditText
                            android:id="@+id/edittext_bankacc_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_box"
                            android:gravity="center_vertical|left"
                            android:hint="Agent Bank No"
                            android:maxLength="20"
                            android:textColorHint="@color/textColor"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/layout_id_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/btn_bg1"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="bottom"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imageview_idcard"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/lic_ico" />


                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="State Issued ID"
                                    android:textColor="#F65F52"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_photograph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/btn_bg1"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:gravity="right"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imageview_photograph"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_21sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/lic_ico" />


                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:text="Passport Photograph"
                                    android:textColor="#F65F52"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="I agree the Terms &amp; Conditions of MovHaul"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/bottom"
        android:background="@color/viewColor"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">



            <Button
                android:id="@+id/button_submit"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/redColor"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/textview_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/login_"
                android:textColor="#F65F52"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <include layout="@layout/down_icon" />

        </LinearLayout>


       <!-- <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_3sdp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="@string/register_terms"
                android:textSize="@dimen/_5sdp" />


        </LinearLayout>-->

    </FrameLayout>


</RelativeLayout>