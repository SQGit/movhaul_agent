<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_register_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinputlayout_register_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColorHint="@color/colorAccent">

        <EditText
            android:id="@+id/edittext_reg_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="User Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingTop="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="#E1E1E1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:arrowSize="@dimen/_15sdp"
            app:customMasterCountries="NG,US,IN"
            app:defaultNameCode="NG"
            app:keyboardAutoPopOnSearch="false"
            app:textSize="@dimen/_10sdp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinputlayout_register_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/edittext__registerphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="#000000"
                android:textSize="@dimen/_15sdp" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="#E1E1E1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_register_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/edittext_register_mail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="#E1E1E1" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_experience1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical|left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_register_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/edittext_region"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:hint="Choose Region (District)"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="bottom"
                android:background="#E1E1E1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@mipmap/drop" />

            <LinearLayout
                android:id="@+id/layout_choose_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frame_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical|left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_register_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textColorHint="@color/colorAccent">

                <EditText
                    android:id="@+id/edittext_bank"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:enabled="false"
                    android:hint="Select Your Bank"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_16sdp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="bottom"
                android:background="#E1E1E1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@mipmap/drop" />

            <LinearLayout
                android:id="@+id/layout_select_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
        </FrameLayout>

        <EditText
            android:id="@+id/edittext_bankacc_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/grey_box"
            android:gravity="center_vertical|left"
            android:hint="Enter Account Number"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>


</LinearLayout>